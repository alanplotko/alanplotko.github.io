{
    "name": "alanplotko.github.io",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "git@github.com:alanplotko/alanplotko.github.io.git",
    "author": "Alan Plotko <5394528+alanplotko@users.noreply.github.com>",
    "license": "MIT",
    "scripts": {
        "build-yaml": "yarn build-yaml-dev & yarn build-yaml-prod",
        "build-yaml-dev": "./node_modules/.bin/yaml-merge _config/common.yml _config/dev.yml > _config-dev.yml",
        "build-yaml-prod": "./node_modules/.bin/yaml-merge _config/common.yml _config/prod.yml > _config-prod.yml",
        "dev": "yarn build-yaml-dev && yarn build-jekyll-dev && yarn gulp",
        "prod": "yarn build-yaml-prod && yarn build-jekyll-prod && yarn gulp",
        "dev-watch": "bundle exec jekyll serve --config _config-dev.yml",
        "dev-serve": "yarn dev && yarn serve",
        "prod-serve": "yarn prod && yarn serve",
        "serve": "bundle exec jekyll serve --skip-initial-build --no-watch",
        "gulp": "./node_modules/.bin/gulp",
        "build-jekyll-dev": "bundle exec jekyll build --config _config-dev.yml",
        "build-jekyll-prod": "JEKYLL_ENV=production bundle exec jekyll build --config _config-prod.yml",
        "test": "yarn lighthouse-all",
        "lighthouse-all": "yarn lighthouse-desktop & yarn lighthouse-mobile",
        "lighthouse-desktop": "./node_modules/.bin/lighthouse http://localhost:4000 --preset=desktop --quiet --chrome-flags='--headless' --view --output-path ./reports/lighthouse-desktop.html",
        "lighthouse-mobile": "./node_modules/.bin/lighthouse http://localhost:4000 --quiet --chrome-flags='--headless' --view --output-path ./reports/lighthouse-mobile.html"
    },
    "devDependencies": {
        "@alexlafroscia/yaml-merge": "^4.1.0",
        "del": "^6.0.0",
        "gulp": "^4.0.2",
        "gulp-clean-css": "^4.3.0",
        "gulp-concat": "^2.6.1",
        "gulp-htmlmin": "^5.0.1",
        "gulp-jsonmin": "^1.2.0",
        "lighthouse": "^9.2.0",
        "workbox-build": "^6.4.2"
    },
    "resolutions": {
        "glob-parent": "^5.1.2"
    }
}
